                </ul>
            </div>
        </div>
    </div>
    <div class="btnArea alignR">
        <a href="{{ url_for('project.index', project_id=project.id) }}" class="btn medium white2  w140">취소</a>
        <a href="{{ url_for('project.post_delete', post_id=post.id) }}" class="btn medium navy  w140">삭제</a>
        <button type="submit" class="btn medium  blue w140">저장</button>
    </div>
    </form>
{% endblock %}